<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.airlane.airlinemanagementsystem.controller.admin.UsuariosController"
            prefWidth="1000" prefHeight="600"
            styleClass="form-container">

    <!-- Encabezado -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #007bff;">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            <Label text="Gestión de Usuarios"
                   style="-fx-font-size: 18px; -fx-text-fill: white; -fx-font-weight: bold;" />
        </HBox>
    </top>

    <!-- Centro: Tabla -->
    <center>
        <VBox spacing="10.0">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <TableView fx:id="tablaUsuarios" prefHeight="300">
                <columns>
                    <TableColumn text="ID" prefWidth="50" fx:id="colId"/>
                    <TableColumn text="Usuario" prefWidth="200" fx:id="colUsername"/>
                    <TableColumn text="Rol" prefWidth="150" fx:id="colRol"/>
                </columns>
            </TableView>

            <HBox spacing="10">
                <Button text="Actualizar" onAction="#cargarUsuarios" styleClass="form-button"/>
                <Button text="Eliminar seleccionado" onAction="#eliminarUsuario" styleClass="form-button"/>
            </HBox>

            <Label fx:id="lblMensaje" style="-fx-text-fill: red;" />
        </VBox>
    </center>

    <!-- Abajo: Formulario -->
    <bottom>
        <VBox spacing="10.0" style="-fx-background-color: #f4f4f4;">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Formulario de Usuario" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints minWidth="100"/>
                    <ColumnConstraints minWidth="250"/>
                </columnConstraints>

                <rowConstraints>
                    <RowConstraints minHeight="35" />
                    <RowConstraints minHeight="35" />
                    <RowConstraints minHeight="35" />
                    <RowConstraints minHeight="35" />
                    <RowConstraints minHeight="35" />
                    <RowConstraints minHeight="35" />
                </rowConstraints>

                <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="usernameField" promptText="Usuario" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <PasswordField fx:id="passwordField" promptText="Contraseña" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Nombre:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="nombreField" promptText="Nombre" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Apellido:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="apellidoField" promptText="Apellido" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Email:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="emailField" promptText="Correo electrónico" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                <Label text="Rol:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <ComboBox fx:id="comboRol" prefWidth="200" promptText="Seleccionar rol"
                          GridPane.rowIndex="5" GridPane.columnIndex="1"/>
            </GridPane>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button text="Agregar" onAction="#agregarUsuario"/>
                <Button text="Editar" onAction="#editarUsuario"/>
                <Button text="Limpiar" onAction="#limpiarFormulario"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
