<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="700" prefWidth="1200" styleClass="form-container" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.airlane.airlinemanagementsystem.controller.admin.DashboardAdministradorController">

    <!-- Encabezado -->
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="89.0" prefWidth="1200.0" spacing="10.0" style="-fx-background-color: #007bff;">
            <padding>
                <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
            </padding>

            <!-- Icono o logo -->
            <ImageView fitHeight="53.0" fitWidth="62.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@/images/airplane-icon.png" />
                </image>
            </ImageView>

            <Label style="-fx-font-size: 18px; -fx-text-fill: white; -fx-font-weight: bold;" text="Dashboard del Administrador" underline="true" wrapText="true">
            <font>
               <Font name="System Italic" size="36.0" />
            </font>
            <cursor>
               <Cursor fx:constant="NONE" />
            </cursor></Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="btnCerrarSesion" onAction="#cerrarSesion" styleClass="form-button" text="Cerrar sesión" />
        </HBox>
    </top>

    <!-- Menú lateral -->
    <left>
        <VBox prefHeight="611.0" prefWidth="138.0" spacing="15.0" style="-fx-background-color: #f5f5f5;">
            <padding>
                <Insets bottom="20.0" left="15.0" right="10.0" top="20.0" />
            </padding>

            <Label lineSpacing="2.0" opacity="0.84" prefHeight="17.0" prefWidth="57.0" styleClass="form-title" text="Menú" underline="true" />

            <Button onAction="#abrirUsuarios" styleClass="form-link">
                <graphic>
                    <HBox alignment="CENTER_LEFT" spacing="5.0">
                        <!-- <FontIcon iconLiteral="fas-users" iconSize="16"/> -->
                        <Label text="Usuarios" />
                    </HBox>
                </graphic>
            </Button>

            <Button onAction="#abrirVuelos" styleClass="form-link">
                <graphic>
                    <HBox alignment="CENTER_LEFT" spacing="5.0">
                        <!-- <FontIcon iconLiteral="fas-plane" iconSize="16"/> -->
                        <Label text="Vuelos" />
                    </HBox>
                </graphic>
            </Button>

            <Button onAction="#abrirReportes" styleClass="form-link">
                <graphic>
                    <HBox alignment="CENTER_LEFT" spacing="5.0">
                        <!-- <FontIcon iconLiteral="fas-chart-bar" iconSize="16"/> -->
                        <Label text="Reportes" />
                    </HBox>
                </graphic>
            </Button>
        </VBox>
    </left>

    <!-- Contenido central -->
    <center>
        <StackPane alignment="CENTER" prefHeight="611.0" prefWidth="838.0" BorderPane.alignment="CENTER">
            <Label style="-fx-font-size: 16px;" text="Bienvenido, administrador." />
        </StackPane>
    </center>

</BorderPane>
